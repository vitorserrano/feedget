{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "no-useless-constructor": "off",
    "comma-dangle": "off",
    "space-before-function-paren": "off"
  }
}
